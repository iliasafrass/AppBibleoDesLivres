<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/texte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center|top"
        android:layout_marginTop="-90dp"
        android:text="Supprimer Livre"
        android:textColor="@color/colorAccent"
        android:textSize="10dp"
        android:textStyle="bold|normal"/>

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:contentDescription="im" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auteur :"
            android:textColor="#111"
            android:textStyle="bold|italic"
            android:layout_marginRight="10dp"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/auteurC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="nom de l'auteur"
            android:textSize="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre :"
            android:layout_marginRight="10dp"
            android:textColor="#111"
            android:textStyle="bold|italic"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/titreC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="nom du titre"
            android:textSize="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editeur :"
            android:layout_marginRight="10dp"
            android:textColor="#111"
            android:textStyle="bold|italic"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/editeurC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="nom editeur"
            android:textSize="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Isbn :"
            android:textColor="#111"
            android:textStyle="bold|italic"
            android:textSize="10dp"/>
        <EditText
            android:id="@+id/isbnC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="saisir l'isbn"
            android:textSize="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:textSize="10dp"
            android:gravity="center"
            android:onClick="r"
            android:id="@+id/scan" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:textSize="10dp"
            android:gravity="center"
            android:onClick="val"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>






