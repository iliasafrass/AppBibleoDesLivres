<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-40dp"
    android:background="@mipmap/menu2"
    >


    <Button
        android:typeface="serif"
		android:text="Creer Livre"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#CC0099"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#CCCC00"
        android:textStyle="bold|italic"
        android:id="@+id/button_creerLivre" />

	
    <Button
            android:typeface="serif"
		android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Visualiser Livre"
        android:layout_gravity="center"
        android:background="#CC0099"
        android:gravity="center"
        android:layout_width="200dp"
        android:textColor="#CCCC00"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:id="@+id/button_visualiserLivre" />

    <Button
		android:typeface="serif"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Supprimer Livre Isbn"
        android:layout_gravity="center"
        android:background="#CC0099"
        android:gravity="center"
        android:layout_width="200dp"
        android:textColor="#CCCC00"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:id="@+id/button_SupprimerLivre" />


</LinearLayout>